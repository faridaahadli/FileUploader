@model FileUploader.Models.AddFileViewModel
@{
    ViewData["Title"] = "Home Page";
}

<form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="AddFile">
    <div class="form-group">
        <label for="source">Example file input</label>
        <input type="file" class="form-control-file" id="source" name="source">
    </div>
    <div class="form-group">
        <label for="exampleFormControlSelect1">Example select</label>
        <select class="form-control" name="category" id="category">
            <option>Choose Category</option>
            @foreach (var item in Model.Categories)
            {
                
                <option value="@item.Id">@item.Name</option>
            }
        </select>
    </div>


    <button type="submit">Add File</button>
</form>
<form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="DownloadFile">
    <div class="form-group">


        @foreach (var item in Model.Files)
        {
           

        <div class="col-md-3">
            @if (item.Extension == ".pdf")
            {
                <img src="~/covImg/pdf_Cov.png" width="200px" height="200px">
            }
            else if (item.Extension == ".png" || item.Extension == ".jpg"
                || item.Extension == ".jpeg" || item.Extension == ".gif")
            {
                <img src="~/file/image/@item.Source" width="200px" height="200px">
            }
            else
            {
                <img src="~/covImg/doc_Cov.png" width="200px" height="200px">
            }
            <input class="form-check-input" type="checkbox" value="@item.Source" name="selectedFile" id="element">
            <label class="form-check-label" for="defaultCheck1">
                @item.Source
            </label>
        </div>

        }

    </div>
    <button type="submit">Download</button>
</form>
